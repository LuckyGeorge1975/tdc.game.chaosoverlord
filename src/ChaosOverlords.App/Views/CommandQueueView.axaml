<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ChaosOverlords.App.ViewModels"
             xmlns:sections="clr-namespace:ChaosOverlords.App.ViewModels.Sections"
             xmlns:conv="clr-namespace:ChaosOverlords.App.Converters"
             x:Class="ChaosOverlords.App.Views.CommandQueueView"
             x:DataType="sections:CommandQueueSectionViewModel">
    <Expander Header="Command Queue"
              FontWeight="Bold"
              IsVisible="{Binding IsVisible}">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="Gang:" VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding AvailableGangs}"
                          SelectedItem="{Binding SelectedGang}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:TurnViewModel+GangOptionViewModel">
                            <TextBlock Text="{Binding DisplayName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Move To:" VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding MovementTargets}"
                          SelectedItem="{Binding SelectedMovementTarget}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:TurnViewModel+SectorOptionViewModel">
                            <TextBlock Text="{Binding DisplayName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Influence target selection (controlled sectors) -->
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="Influence Target:" VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding ControlledSectors}"
                          SelectedItem="{Binding SelectedInfluenceTarget}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:TurnViewModel+SectorOptionViewModel">
                            <TextBlock Text="{Binding DisplayName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Queue Move" Command="{Binding QueueMoveCommand}" />
                <Button Content="Queue Control" Command="{Binding QueueControlCommand}" />
                <Button Content="Queue Influence" Command="{Binding QueueInfluenceCommand}" />
                <Button Content="Queue Chaos" Command="{Binding QueueChaosCommand}" />
            </StackPanel>

            <TextBlock Text="No controlled sectors yet. Control a sector to influence its site."
                       Foreground="{DynamicResource ThemeAccentBrush}"
                       IsVisible="{Binding ControlledSectors.Count, Converter={x:Static conv:IsZeroConverter.Instance}}"
                       Margin="0,4,0,0" />

            <StackPanel Spacing="4" Margin="0,8,0,0">
                <TextBlock Text="Previews:" FontWeight="Bold" />
                <TextBlock Text="{Binding ControlPreview}" IsVisible="{Binding HasControlPreview}" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding InfluencePreview}" IsVisible="{Binding HasInfluencePreview}" TextWrapping="Wrap"/>
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}"
                       FontStyle="Italic"
                       Foreground="{DynamicResource ThemeAccentBrush}"
                       IsVisible="{Binding HasStatusMessage}"
                       TextWrapping="Wrap" />

            <ItemsControl ItemsSource="{Binding QueuedCommands}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:TurnViewModel+QueuedCommandViewModel">
                        <Border Padding="8" Margin="0 0 0 4" Background="{DynamicResource ThemeControlLowBrush}" CornerRadius="4">
                            <StackPanel Spacing="4">
                                <TextBlock Text="{Binding Summary}" FontWeight="Bold" TextWrapping="Wrap" />
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                <Button x:CompileBindings="False"
                                        Content="Remove"
                                        HorizontalAlignment="Left"
                                        Command="{Binding DataContext.RemoveQueuedCommandCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Expander>
</UserControl>
