<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ChaosOverlords.App.ViewModels"
             xmlns:sections="clr-namespace:ChaosOverlords.App.ViewModels.Sections"
             x:Class="ChaosOverlords.App.Views.RecruitmentView"
             x:DataType="sections:RecruitmentSectionViewModel">
    <Expander Header="Recruitment"
              FontWeight="Bold"
              IsVisible="{Binding IsVisible}">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                <TextBlock Text="Deploy to:" VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding ControlledSectors}"
                          SelectedItem="{Binding SelectedSector}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:TurnViewModel+SectorOptionViewModel">
                            <TextBlock Text="{Binding DisplayName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <ItemsControl ItemsSource="{Binding RecruitmentOptions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:TurnViewModel+RecruitmentOptionViewModel">
                        <Border Padding="4" Margin="0 0 0 4" Background="{DynamicResource ThemeControlLowBrush}"
                                CornerRadius="4">
                            <StackPanel Spacing="4">
                                <TextBlock Text="{Binding GangName}" FontWeight="Bold" />
                                <TextBlock Text="{Binding StatusDisplay}" />
                                <TextBlock Text="{Binding HiringCost, StringFormat='Hire Cost: {0}'}" />
                                <TextBlock Text="{Binding UpkeepCost, StringFormat='Upkeep: {0}'}" />
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Button Content="Hire"
                                            Command="{Binding HireCommand}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding IsAvailable}" />
                                    <Button Content="Decline"
                                            Command="{Binding DeclineCommand}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding IsAvailable}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="{Binding StatusMessage}"
                       FontStyle="Italic"
                       Foreground="{DynamicResource ThemeAccentBrush}"
                       IsVisible="{Binding HasStatusMessage}"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Expander>
</UserControl>