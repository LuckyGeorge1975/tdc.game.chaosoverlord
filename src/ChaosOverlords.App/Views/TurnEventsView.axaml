<UserControl xmlns="https://github.com/avaloniaui"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:vm="clr-namespace:ChaosOverlords.App.ViewModels"
         xmlns:sections="clr-namespace:ChaosOverlords.App.ViewModels.Sections"
         x:Class="ChaosOverlords.App.Views.TurnEventsView"
         x:DataType="sections:TurnEventsSectionViewModel">
    <Expander Header="Turn Events"
              FontWeight="Bold">
        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Open Logs Folder" Command="{Binding OpenLogsFolderCommand}" />
                <ToggleSwitch Content="Auto-scroll" IsChecked="{Binding AutoScrollToLatest}"/>
            </StackPanel>
            <ScrollViewer Height="200" Name="EventsScrollViewer">
                <ItemsControl ItemsSource="{Binding Events}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:TurnViewModel+TurnEventViewModel">
                            <Border Padding="8" Margin="0 0 0 4" Background="{DynamicResource ThemeControlLowBrush}" CornerRadius="4">
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Expander>
</UserControl>
