<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sections="clr-namespace:ChaosOverlords.App.ViewModels.Sections"
             xmlns:vm="clr-namespace:ChaosOverlords.App.ViewModels"
             x:Class="ChaosOverlords.App.Views.FinancePreviewView"
             x:DataType="sections:FinancePreviewSectionViewModel">
    <Expander Header="{Binding Heading}"
              FontWeight="Bold"
              IsVisible="{Binding IsVisible}">
        <StackPanel>
            <Border Padding="4" Background="{DynamicResource ThemeControlLowBrush}" CornerRadius="4">
                <StackPanel Spacing="2">
                    <TextBlock Text="City Overview" FontWeight="Bold" />
                    <TextBlock Text="{Binding CityNetChangeDisplay, StringFormat='Net Adjustment: {0}'}"
                               FontStyle="Italic" />
                    <ItemsControl ItemsSource="{Binding CityFinanceCategories}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:TurnViewModel+FinanceCategoryViewModel">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="{Binding DisplayName}" />
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding AmountDisplay}"
                                               HorizontalAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <StackPanel Spacing="2">
                <TextBlock Text="Sectors" FontWeight="Bold" />
                <ItemsControl ItemsSource="{Binding SectorFinance}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:TurnViewModel+FinanceSectorViewModel">
                            <Border Padding="8" Margin="0 0 0 4" Background="{DynamicResource ThemeControlLowBrush}"
                                    CornerRadius="4">
                                <StackPanel Spacing="4">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding NetChangeDisplay, StringFormat='Net: {0}'}"
                                                   HorizontalAlignment="Right" />
                                    </Grid>
                                    <ItemsControl ItemsSource="{Binding Categories}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:TurnViewModel+FinanceCategoryViewModel">
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <TextBlock Text="{Binding DisplayName}" />
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding AmountDisplay}"
                                                               HorizontalAlignment="Right" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </Expander>
</UserControl>